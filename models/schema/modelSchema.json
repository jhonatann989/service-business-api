{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sequelize Model Definition",
  "type": "object",
  "properties": {
    "fieldsDefinition": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "STRING",
              "TEXT",
              "INTEGER",
              "BIGINT",
              "FLOAT",
              "REAL",
              "DOUBLE",
              "DECIMAL",
              "DATE",
              "TIME",
              "DATEONLY",
              "BOOLEAN",
              "BLOB",
              "UUID",
              "UUIDV1",
              "UUIDV4",
              "HSTORE",
              "JSON",
              "JSONB",
              "ARRAY",
              "RANGE",
              "GEOMETRY",
              "GEOGRAPHY",
              "ENUM",
              "INET",
              "MACADDR",
              "CIDR",
              "VIRTUAL",
              "CHAR",
              "TINYINT",
              "SMALLINT",
              "MEDIUMINT",
              "NUMBER"
            ]
          },
          "allowNull": {
            "type": "boolean"
          },
          "defaultValue": {
            "type": ["string", "number", "boolean", "null", "object", "array"]
          },
          "primaryKey": {
            "type": "boolean"
          },
          "autoIncrement": {
            "type": "boolean"
          },
          "unique": {
            "type": "boolean"
          },
          "comment": {
            "type": "string"
          },
          "references": {
            "type": "object",
            "properties": {
              "model": {
                "type": "string"
              },
              "key": {
                "type": "string"
              }
            },
            "required": ["model", "key"]
          },
          "onUpdate": {
            "type": "string",
            "enum": ["CASCADE", "SET NULL", "RESTRICT", "NO ACTION", "SET DEFAULT"]
          },
          "onDelete": {
            "type": "string",
            "enum": ["CASCADE", "SET NULL", "RESTRICT", "NO ACTION", "SET DEFAULT"]
          },
          "validate":{
            "type": "object"
          },
          "values":{
            "type":"array",
            "items":{
              "type":["string", "number", "boolean"]
            }
          }
        },
        "required": ["type"]
      },
      "required": {}
    },
    "associations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "relationType": {
            "type": "string",
            "enum": [
              "hasOne",
              "belongsTo",
              "hasMany",
              "belongsToMany"
            ]
          },
          "relationModel": {
            "type": "string"
          },
          "through":{
            "type":"string"
          },
          "foreignKey":{
            "type":"string"
          },
          "otherKey":{
            "type":"string"
          },
          "as":{
            "type":"string"
          }
        },
        "required": ["relationType", "relationModel"]
      }
    },
    "accessibleViaRest": {
      "type": "boolean"
    }
  },
  "required": ["fieldsDefinition","associations","accessibleViaRest"]
}